+static QStringList cleanThem(const QStringList &lst)
+{
+    QStringList result;
+    for (QStringList::ConstIterator it = lst.begin(); it != lst.end(); ++it) {
+        result.push_back(QDir::cleanPath(*it));
+    }
+    return result;
+}
